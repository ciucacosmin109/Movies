<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CenteredProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="SearchImageButton">
        <item name="android:layout_width">@dimen/search_button</item>
        <item name="android:layout_height">@dimen/search_button</item>
        <item name="android:layout_marginTop">@dimen/search_padding</item>
        <item name="android:contentDescription">@string/search</item>
        <item name="android:src">@drawable/ic_baseline_search_24</item>
    </style>
</resources>